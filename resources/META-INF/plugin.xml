<idea-plugin>
    <id>com.dengzii.plugin.view</id>
    <name>FindViewGenerator</name>
    <version>1.0</version>
    <vendor email="denua@foxmail.com" url="https://dengzii.com">dengzi</vendor>

    <description>Android auto generator find view by id any where</description>

    <idea-version since-build="1.0"/>

    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="com.dengzii.findiewaction" class="com.dengzii.findview.GenerateFindViewAction"
                text="Generator FindViewById"
                description="generate findViewById(R.id.idRes)">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt G"/>
        </action>
    </actions>

</idea-plugin>